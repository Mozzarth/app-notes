{
  "name": "simple-note",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "engines": {
    "node": "12.18.x",
    "npm": "6.x"
  },
  "scripts": {
    "start:build": "npm run build && node dist/src/index.js",
    "dev": "nodemon -L",
    "build": "npm run build:clean && npm run build:tsc && npm run build:cp",
    "build:dev": "npm run build && npm run build:cp:dev",
    "build:clean": "rm -r dist; exit 0",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "build:cp": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "build:cp:dev": "copy '.env' dist/src",
    "heroku-postbuild": "npm build"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/morgan": "^1.9.2",
    "@types/mysql": "^2.15.17",
    "@types/nodemailer": "^6.4.0",
    "@types/uuid": "^8.3.0",
    "copy": "^0.3.2",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "husky": "^4.3.8",
    "mocha": "^8.2.1",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "ts-node-dev": "^1.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.9.2",
    "helmet": "^4.4.1",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0",
    "mysql": "^2.18.1",
    "nodemailer": "^6.4.17",
    "uuid": "^8.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mozzarth/Note.git"
  },
  "author": "Mozzarth",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Mozzarth/Note/issues"
  },
  "homepage": "https://github.com/Mozzarth/Note#readme"
}
